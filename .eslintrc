{
  "extends": "eslint-config-airbnb",

  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "mocha": true
  },

  "parser": "babel-eslint",

  "ecmaFeatures": {
    "modules": true
  },

  "globals": {
    "assert": false
  },

  "rules": {
    "no-var": 0,
    "no-unused-vars": [2, {
      "vars": "local",
      "args": "none"
    }],
    "func-names": 0,
    "vars-on-top": 0,
    "no-else-return": 0,
    "new-cap": 0,
    "id-length": 0,
    "comma-dangle": 0
  }
}
